<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/qb_px_20"
    android:layout_marginStart="@dimen/qb_px_20"
    android:layout_marginTop="@dimen/qb_px_16"
    app:cardBackgroundColor="@color/dialog_bg"
    app:cardCornerRadius="@dimen/qb_px_6"
    app:cardElevation="@dimen/qb_px_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/qb_px_18"
        android:paddingTop="@dimen/qb_px_18">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/qb_px_24"
            android:layout_marginStart="@dimen/qb_px_16"
            android:text="温馨提示"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/qb_px_24"
            android:layout_marginStart="@dimen/qb_px_24"
            android:layout_marginTop="@dimen/qb_px_16"
            android:text="注册成功！填写'邀请码'，您将再获1元奖励！现在填写吗？" />

        <ProgressBar
            android:id="@+id/seekbar"
            android:visibility="gone"
            android:layout_marginStart="@dimen/qb_px_16"
            android:layout_marginEnd="@dimen/qb_px_16"
            android:layout_marginTop="@dimen/qb_px_12"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_16"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/qb_px_42"
                android:layout_marginEnd="@dimen/qb_px_16"
                android:layout_marginStart="@dimen/qb_px_16"
                android:layout_weight="1"
                android:background="@drawable/shape_cancel_bg"
                android:text="以后再说"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/qb_px_42"
                android:layout_marginEnd="@dimen/qb_px_16"
                android:layout_marginStart="@dimen/qb_px_16"
                android:layout_weight="1"
                android:background="@drawable/shape_ok_bg"
                android:text="现在填写"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>